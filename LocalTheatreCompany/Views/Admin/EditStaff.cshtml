@model LocalTheatreCompany.Models.ViewModels.EditStaffViewModel

@{
    ViewData["Image"] = "/img/admin.jpg";
    ViewData["Heading"] = "Edit Staff Details";
}

<div class="container">

    @using (Html.BeginForm())
