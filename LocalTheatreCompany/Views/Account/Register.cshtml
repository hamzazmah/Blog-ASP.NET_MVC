@model LocalTheatreCompany.Models.ViewModels.RegisterViewModel
@{
    ViewData["Image"] = "/img/register.jpg";
    ViewData["Heading"] = "Create a New Account";
}

<div class="container">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.Firstname, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.Lastname, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.Street, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.City, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.Postcode, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PhoneNumber, null, new { @class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <h3>@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })</h3>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default btn-success" value="Register" />
            </div>
        </div>
    }

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
